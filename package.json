{
    "name": "teascript-for-smbx38a",
    "displayName": "Teascript For SMBX38A",
    "description": "Teascript of SMBX38A coding support.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:smbxtea"
	],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "smbxtea",
            "aliases": ["SMBX Teascript", "smbxtea"],
            "extensions": [".smt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "smbxtea",
            "scopeName": "source.smt",
            "path": "./syntaxes/smbxtea.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "shaderlab",
                "path": "./snippets/smbxtea.json"
            }
        ],
        "commands": [
			{
				"command": "test.helloWorld",
				"title": "Hello World"
			}
		]
    },
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}